@model Student
@{
    ViewData["Title"] = "Student Details";
}

<div class="container mt-4">
    <h2>Student Details</h2>
    <hr />

    <div class="card">
        <div class="card-header">
            <h3>@Model.FirstName @Model.LastName</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Student ID</dt>
                <dd class="col-sm-9">@Model.StudentId</dd>

                <dt class="col-sm-3">First Name</dt>
                <dd class="col-sm-9">@Model.FirstName</dd>

                <dt class="col-sm-3">Last Name</dt>
                <dd class="col-sm-9">@Model.LastName</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Date of Birth</dt>
                <dd class="col-sm-9">@Model.DateOfBirth.ToShortDateString()</dd>

                <dt class="col-sm-3">Enrollment Date</dt>
                <dd class="col-sm-9">@Model.EnrollmentDate.ToShortDateString()</dd>

                <dt class="col-sm-3">Enrollments</dt>
                <dd class="col-sm-9">
                    @if (Model.Enrollments != null && Model.Enrollments.Any())
                    {
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Course Name</th>
                                    <th>Course Credit</th>
                                    <th>Grade</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var enrollment in Model.Enrollments)
                                {
                                    <tr>
                                        <td>@enrollment.Course.CourseName</td>
                                        <td>@enrollment.Course.Credits</td>
                                        <td>
                                            @if (enrollment.Grade.HasValue)
                                            {
                                                @enrollment.Grade.Value.ToString("N2")
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not graded</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="table-primary">
                                    <td colspan="2"><strong>Average Grade</strong></td>
                                    <td>
                                        @if (ViewBag.AverageGrade != null)
                                        {
                                            @(((decimal)ViewBag.AverageGrade).ToString("N2"))
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    }
                    else
                    {
                        <span>No enrollments</span>
                    }
                </dd>
            </dl>
        </div>
        <div class="card-footer">
            <a asp-route-id="@Model.StudentId" asp-action="Edit" class="btn btn-primary">Edit</a>
            <a asp-action="Students" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>