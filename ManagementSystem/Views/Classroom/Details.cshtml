@model Classroom
@{
    ViewData["Title"] = "Classroom Details";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Classrooms">Classrooms</a></li>
            <li class="breadcrumb-item active" aria-current="page">Details</li>
        </ol>
    </nav>

    <div class="card shadow-sm">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">@Model.ClassroomName</h1>
            <span class="badge bg-primary">ID: @Model.ClassroomId</span>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h2 class="h5 mb-3">Classroom Information</h2>
                    <dl class="row">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.ClassroomName</dd>

                        <dt class="col-sm-4">Capacity</dt>
                        <dd class="col-sm-8">@Model.Capacity students</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            @if (Model.Capacity > 0)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <h2 class="h5 mb-3">Assigned Course</h2>
                    @if (Model.Course != null)
                    {
                        <dl class="row">
                            <dt class="col-sm-4">Course Name</dt>
                            <dd class="col-sm-8">@Model.Course.CourseName</dd>

                            <dt class="col-sm-4">Course ID</dt>
                            <dd class="col-sm-8">@Model.Course.CourseId</dd>

                            <dt class="col-sm-4">Instructor</dt>
                            <dd class="col-sm-8">
                                @(Model.Course.Instructor?.FirstName ?? "Not Assigned")
                                @(Model.Course.Instructor?.LastName ?? "")
                            </dd>

                        </dl>
                    }
                    else
                    {
                        <p class="text-muted">No course currently assigned to this classroom.</p>
                    }
                </div>
            </div>

            <h2 class="h5 mt-4 mb-3">Additional Information</h2>
            <div class="row">
                <div class="col-md-6">
                    <div class="card bg-light">
                        <div class="card-body">
                            <h3 class="h6 card-title">Equipment</h3>
                            <ul class="list-unstyled mb-0">
                                <li><i class="bi bi-check-circle-fill text-success me-2"></i>Projector</li>
                                <li><i class="bi bi-check-circle-fill text-success me-2"></i>Whiteboard</li>
                                <li><i class="bi bi-check-circle-fill text-success me-2"></i>Computer</li>
                                <li><i class="bi bi-x-circle-fill text-danger me-2"></i>Smart Board</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card bg-light">
                        <div class="card-body">
                            <h3 class="h6 card-title">Accessibility</h3>
                            <ul class="list-unstyled mb-0">
                                <li><i class="bi bi-check-circle-fill text-success me-2"></i>Wheelchair Accessible</li>
                                <li><i class="bi bi-check-circle-fill text-success me-2"></i>Hearing Loop System</li>
                                <li><i class="bi bi-x-circle-fill text-danger me-2"></i>Braille Signage</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-between">
                <a asp-action="Classrooms" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.ClassroomId" class="btn btn-primary me-2">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete the classroom "@Model.ClassroomName"?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="Delete" asp-route-id="@Model.ClassroomId" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

